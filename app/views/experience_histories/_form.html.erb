<%= form_for @experience_history, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :place_of_work, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :place_of_work, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :position, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :position, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_from, :class => 'control-label' %>
    <div class="controls">
      <div class="input-append date">
          <%= f.text_field :date_from, :value=>@experience_history.date_from.present? ? @experience_history.date_from.strftime('%Y-%m-%d') : Date.today.strftime('%Y-%m-%d') %>
          <span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_to, :class => 'control-label' %>
    <div class="controls">
      <div class="input-append date">
          <%= f.text_field :date_to, :value=>@experience_history.date_to.present? ? @experience_history.date_to.strftime('%Y-%m-%d') : Date.today.strftime('%Y-%m-%d') %>
          <span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :summary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :summary, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                experience_histories_path, :class => 'btn' %>
  </div>
<% end %>

<script type="text/javascript">
  $('.input-append').datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
</script>