
<%= form_for @education_history, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :place_of_study, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :place_of_study, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_from, :class => 'control-label' %>
    <div class="controls">
      <div class="input-append date" id="dp1">
          <%= f.text_field :date_from, :value=> @education_history.date_from.present? ? @education_history.date_from.strftime('%m-%d-%Y') : Date.today.strftime('%m-%d-%Y') %>
          <span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_to, :class => 'control-label' %>
    <div class="controls">
      <div class="input-append date">
          <%= f.text_field :date_to, :value=>@education_history.date_to.present? ? @education_history.date_to.strftime('%m-%d-%Y') : Date.today.strftime('%m-%d-%Y') %>
          <span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :summary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :summary, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                education_histories_path, :class => 'btn' %>
  </div>
<% end %>

<script type="text/javascript">
  $('.input-append').datepicker();
</script>